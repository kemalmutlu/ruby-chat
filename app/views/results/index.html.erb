<div class="home_container h-full" data-controller="menu">
  <div class="md:flex lg:flex h-full min-h-full">
    <div data-menu-target="leftMenu" data-hidden="true" class="flex-none w-64 h-auto h-14 text-white hidden sm:block left-home-screen px-3">
      <div class="flex-col overflow-scroll h-full max-h-full">
        <div class="mb-1 mt-3 flex flex-row gap-2">
          <a class="flex p-3 items-center gap-3 transition-colors duration-200 text-white cursor-pointer text-sm rounded-md border border-white/20 hover:bg-gray-500/10 h-11 flex-shrink-0 flex-grow">
            <svg stroke="currentColor" fill="none" stroke-width="2" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
              <line x1="12" y1="5" x2="12" y2="19"></line>
              <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            FAQ
          </a>
          <button data-menu-target="closeMenu" data-action="click->menu#toggleMenu"><a class="flex p-3 gap-3 transition-colors duration-200 text-white cursor-pointer text-sm rounded-md border border-white/20 hover:bg-gray-500/10 h-11 w-11 flex-shrink-0 items-center justify-center">
            <svg stroke="currentColor" fill="none" stroke-width="2" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="9" y1="3" x2="9" y2="21"></line></svg>
            <span style="position: absolute; border: 0px; width: 1px; height: 1px; padding: 0px; margin: -1px; overflow: hidden; clip: rect(0px, 0px, 0px, 0px); white-space: nowrap; overflow-wrap: normal;">Close sidebar</span>
          </a>
          </button>
        </div>
        <div data-controller="faq-question" class="flex-col space-y-4 mt-5 overflow-scroll h-full max-h-full">
          <%= render 'shared/popular_result' %>
        </div>
      </div>
    </div>
    <button data-menu-target="openMenu" id="openMenu" data-action="click->menu#toggleMenu" class="hidden"><a class="flex p-3 gap-3 transition-colors duration-200 text-white cursor-pointer text-sm rounded-md border border-white/20 hover:bg-gray-500/10 h-11 w-11 flex-shrink-0 items-center justify-center">
      <svg stroke="currentColor" fill="none" stroke-width="2" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
        <line x1="9" y1="3" x2="9" y2="21"></line></svg>
      <span style="position: absolute; border: 0px; width: 1px; height: 1px; padding: 0px; margin: -1px; overflow: hidden; clip: rect(0px, 0px, 0px, 0px); white-space: nowrap; overflow-wrap: normal;">Close sidebar</span>
    </a>
    </button>
    <div class="grow h-14 h-auto text-white h-full">
      <div class="flex flex-col text-sm dark:bg-gray-800 h-full items-center">
        <div class="flex-1 my_scroll_div text-gray-800 w-full min-w-full md:max-w-2xl lg:max-w-3xl md:flex md:flex-col px-6 dark:text-gray-100">
          <div id="results" class="min-w-full flex-1 justify-end text-xl flex-col font-semibold text-center mt-3 sm:mt-[6vh] ml-auto mr-auto mb-4 sm:mb-16 flex gap-2 items-center">

          </div>
        </div>
        <div class="flex flex-row max-w-full w-[50%] justify-center">
          <%= turbo_frame_tag 'new_result', src: new_result_path, target: "_top", class: "w-full my-[40px]" %>
        </div>
      </div>
    </div>
  </div>
</div>